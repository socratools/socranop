<?xml version="1.0" encoding="UTF-8"?>
<component>
  <id>${APPLICATION_ID}</id>
  <metadata_license>MIT</metadata_license>
  <name>socranop</name>
  <summary>Utilities for Soundcraft Notepad series of mixers</summary>
  <description>
    <p>
      Configures advanced features of the Soundcraft Notepad series of
      mixers like the audio routing from mixer channels to USB audio
      capture channels.
    </p>
    <p>The supported devices are:</p>
    <ul>
      <li>Notepad-5</li>
      <li>Notepad-8FX</li>
      <li>Notepad-12FX</li>
    </ul>
  </description>
  <categories>
    <category>Audio</category>
  </categories>
  <launchable type="desktop-id">${APPLICATION_ID}.desktop</launchable>
  <provides>
    ${APPSTREAM_MODALIASES}
    <dbus type="user">${BUSNAME}</dbus>
    ${APPSTREAM_BINARIES}
  </provides>
  <developer id="io.github.socratools">
    <name>The Socratools Team</name>
  </developer>
  <url type="homepage">https://github.com/socratools/socranop</url>
  <url type="bugtracker">https://github.com/socratools/socranop/issues</url>
  <project_license>MIT</project_license>
